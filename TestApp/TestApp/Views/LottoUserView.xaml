<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App.UI.Views.LottoUserView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="lottoUserView"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Grid x:Name="gridLayoutDesign">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackLayout
                    x:Name="layoutHeader"
                    Grid.Row="0"
                    Grid.Column="0">
                    <Image x:Name="btnAddSparkleBox" Source="add_default.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AddSparkleBox}" CommandParameter="add" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <ListView
                    x:Name="listCurrentLottoNumbers"
                    Grid.Row="1"
                    Grid.Column="0"
                    CachingStrategy="RecycleElement"
                    HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding UserLottoNumbers}"
                    VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal">
                                        <Label
                                            FontSize="Large"
                                            HorizontalOptions="StartAndExpand"
                                            Text="{Binding SparkleBoxNumbers}" />
                                        <Button
                                            x:Name="btnDelSparkleBox"
                                            BackgroundColor="{StaticResource Primary}"
                                            Command="{Binding Path=BindingContext.DeleteSparkleBox, Source={x:Reference lottoUserView}"
                                            CommandParameter="{Binding}"
                                            HorizontalOptions="Center"
                                            Text="-"
                                            TextColor="Wheat" />
                                        <!--  CommandParameter="{x:Reference btnDelSparkleBox}"  -->
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!--<StackLayout>
                    <Button
                        x:Name="btnDelSparkleBox"
                        BackgroundColor="{StaticResource Primary}"
                        Command="{Binding Path=BindingContext.DeleteSparkleBox, Source={x:Reference lottoUserView}"
                        CommandParameter="{Binding}"
                        HorizontalOptions="EndAndExpand"
                        Text="-"
                        TextColor="Wheat"
                        VerticalOptions="EndAndExpand" />
                </StackLayout>-->
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>