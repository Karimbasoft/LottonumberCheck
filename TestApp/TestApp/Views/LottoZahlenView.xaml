<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="App.UI.Views.LottoZahlenView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
    xmlns:xfShapeView="clr-namespace:XFShapeView;assembly=XFShapeView"
    Title="LottoView">
    <ContentPage.Content>
        <StackLayout>
            <!--<ScrollView HeightRequest="1250">-->
            <Grid x:Name="GridAuswerter" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="labHeader"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span ForegroundColor="{StaticResource MediumGrayTextColor}" Text="Lottozahlen" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <!--  From https://github.com/daniel-luberda/DLToolkit.Forms.Controls/tree/master/FlowListView  -->
                <flv:FlowListView
                    Grid.Row="1"
                    Grid.Column="0"
                    FlowColumnCount="6"
                    FlowItemsSource="{Binding CurrentLottoNumbers}"
                    HasUnevenRows="false"
                    HorizontalOptions="Center"
                    SeparatorVisibility="None"
                    VerticalOptions="Center">
                    <flv:FlowListView.FlowColumnTemplate>
                        <DataTemplate>
                            <!--<Label
                                HorizontalOptions="Fill"
                                Text="{Binding Number}"
                                VerticalOptions="Fill"
                                XAlign="Center"
                                YAlign="Center" />-->
                            <xfShapeView:ShapeView
                                BorderColor="Gray"
                                BorderWidth="2"
                                IsVisible="True"
                                Opacity="1"
                                Progress="50"
                                ShapeType="Circle"
                                Color="{StaticResource LightBackgroundColor}">
                                <Label
                                    x:Name="labNumber"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding}"
                                    XAlign="Center"
                                    YAlign="Center" />
                            </xfShapeView:ShapeView>
                        </DataTemplate>
                    </flv:FlowListView.FlowColumnTemplate>
                </flv:FlowListView>
                <xfShapeView:ShapeView
                    Grid.Row="2"
                    Grid.Column="0"
                    BorderColor="Green"
                    BorderWidth="2"
                    IsVisible="True"
                    Opacity="1"
                    Progress="50"
                    ShapeType="Circle"
                    Color="Green">
                    <Label
                        x:Name="labSuperNumber"
                        HorizontalTextAlignment="Center"
                        Text="{Binding SuperNumber}"
                        VerticalTextAlignment="Center" />
                </xfShapeView:ShapeView>
                <Button
                    x:Name="btnCheckLottosheet"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="5,30,5,0"
                    BackgroundColor="{StaticResource Primary}"
                    Command="{Binding ShowEvaluation}"
                    CornerRadius="10"
                    Text="Auswerten"
                    TextColor="{StaticResource LightTextColor}" />
            </Grid>
            <Grid
                x:Name="GridInformations"
                Margin="0,10,0,0"
                IsVisible="{Binding ShowInfoTable}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="labSuperzahltxt"
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="16"
                    HorizontalTextAlignment="End"
                    Text="Superzahl:" />
                <xfShapeView:ShapeView
                    x:Name="CheckSuperzahlIsSame"
                    Grid.Row="0"
                    Grid.Column="1"
                    BorderColor="{Binding SuperNumberColor}"
                    BorderWidth="2"
                    IsVisible="True"
                    Opacity="1"
                    Progress="50"
                    ShapeType="Circle"
                    Color="{Binding SuperNumberColor}" />

                <!--<Label
                    x:Name="CheckSuperzahlIsSame"
                    Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="{Binding SuperNumberColor}"
                    HorizontalOptions="Center"
                    WidthRequest="20" />-->

                <Label
                    x:Name="labTreffertxt"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    FontSize="16"
                    HorizontalTextAlignment="End"
                    Text="Höchster Treffer:" />
                <Label
                    x:Name="CountHitsNumbers"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalTextAlignment="Center"
                    Text="{Binding CountHits}" />
                <Label
                    x:Name="labGewinntxt"
                    Grid.Row="3"
                    Grid.Column="0"
                    FontSize="16"
                    HorizontalTextAlignment="End"
                    Text="Gesamter Gewinn:" />
                <Label
                    x:Name="labGewinnQuote"
                    Grid.Row="3"
                    Grid.Column="1"
                    FontSize="16"
                    HorizontalTextAlignment="Center"
                    Text="{Binding TotalProfit}" />

            </Grid>
            <Button
                x:Name="btnMoreInformations"
                Margin="5,0,5,5"
                BackgroundColor="{StaticResource Primary}"
                Command="{Binding CmdShowMoreInformations}"
                CornerRadius="10"
                IsVisible="{Binding ShowInfoTable}"
                Text="Mehr Informationen"
                TextColor="{StaticResource LightTextColor}"
                VerticalOptions="EndAndExpand" />
            <!--</ScrollView>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>