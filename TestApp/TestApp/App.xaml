<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="App.UI.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#455A64</Color>
            <Color x:Key="PrimaryDark">#263238</Color>
            <Color x:Key="Accent">#CFD8DC</Color>
            <Color x:Key="LightBackgroundColor">#ECEFF1</Color>
            <Color x:Key="DarkBackgroundColor">#263238</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">#ECEFF1</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="#ECEFF1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
